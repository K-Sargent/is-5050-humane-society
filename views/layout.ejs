<body>
	<%- include('partials/topNav') %>


	<section id="layout-section" class="my-5">
		<div id="layout-container" class="container">
			<% if (flashMessages) { %>
				<div class="sticky-top m-0 mt-3" aria-live="polite" aria-atomic="true">
					<div class="toast border-0" style="position: absolute; top: 0; right: 0;">
						<% if (flashMessages.success) { %>
							<div class="toast-header d-flex justify-content-between" style="background-color: #0D8D27">
								<strong class="mr-auto" style="color: white"><i class="fas fa-check">&nbsp;</i> Sweet!</strong>
							</div>
							<div class="toast-body">
								<%= flashMessages.success %>
							</div>
						<% } else if (flashMessages.error) { %>
							<div class="toast-header d-flex justify-content-between" style="background-color: #AB1633">
								<strong class="mr-auto" style="color: white"><i class="fas fa-exclamation-circle">&nbsp;</i> Aw Snap.</strong>
							</div>
							<div class="toast-body">
								<%= flashMessages.error %>
							</div>
						<% } %>
					</div>
				</div>
			<% } %>

			<%- body %>
			</div>
		</section>
		<%- include('partials/footer') %>
	</body>

<script>
	$(document).ready(function(){
